<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextMicroscopic">
        <item name="android:textSize">@dimen/text_size_microscopic</item>
    </style>
    <style name="TextExtraExtraSmall">
        <item name="android:textSize">@dimen/text_size_extra_extra_small</item>
    </style>
    <style name="TextExtraSmall">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="TextSmallMedium">
        <item name="android:textSize">@dimen/text_size_small_medium</item>
    </style>
    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextQuiteLarge">
        <item name="android:textSize">@dimen/text_size_quite_large</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_paper_title</item>
    </style>
    <style name="TextExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>
    <style name="TextExtraExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_extra_large</item>
    </style>
    <style name="TextHuge">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
</resources>
