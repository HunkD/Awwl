<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextMicroscopic">
        <item name="android:textSize">@dimen/text_size_microscopic</item>
    </style>
    <style name="TextExtraExtraSmall">
        <item name="android:textSize">@dimen/text_size_extra_extra_small</item>
    </style>
    <style name="TextExtraSmall">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="TextSmallMedium">
        <item name="android:textSize">@dimen/text_size_small_medium</item>
    </style>
    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextQuiteLarge">
        <item name="android:textSize">@dimen/text_size_quite_large</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_paper_title</item>
    </style>
    <style name="TextExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>
    <style name="TextExtraExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_extra_large</item>
    </style>
    <style name="TextHuge">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="checkboxCompat">
        <item name="android:button">@drawable/abc_btn_check_material</item>
    </style>
    <style name="pre_lolipop_shadow">
        <item name="android:visibility">visible</item>
    </style>

    <style name="SlideText" parent="TextMedium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
