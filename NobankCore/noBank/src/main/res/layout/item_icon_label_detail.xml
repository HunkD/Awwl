<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_light">
    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:contentDescription="label_icon"
        android:src="@drawable/ic_dashboard"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/label_title"
        style="@style/TextLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_icon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        tools:text="Label Title"/>
    <TextView
        android:id="@+id/label_detail"
        style="@style/TextSmallMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_icon"
        android:layout_alignParentRight="true"
        android:layout_below="@id/label_title"
        tools:text="Label Detail"
        android:layout_marginBottom="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_below="@id/label_detail"
        android:layout_alignLeft="@id/label_detail"/>
</RelativeLayout>