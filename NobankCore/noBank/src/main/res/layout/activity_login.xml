<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/page_padding"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_login_title"
                android:gravity="left"
                style="@style/TextQuiteLarge"
                android:layout_marginBottom="150dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_login_name"
                    style="@style/TextMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <EditText
                    android:id="@+id/login_page_input_login_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    style="@style/TextSmallMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login TEXTVIEW"
                    style="@style/TextMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <TextView
                    android:id="@+id/login_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount FIELD"
                    style="@style/TextSmallMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_login_password"
                    style="@style/TextMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <EditText
                    android:id="@+id/login_page_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/TextSmallMedium"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>

                <CheckBox
                    style="@style/checkboxCompat"
                    android:id="@+id/login_page_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_remember_me"
                    android:layout_marginBottom="@dimen/item_interval_bottom"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_page_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="@dimen/text_size_medium"
                android:background="@drawable/raised_button"
                android:layout_margin="4dp"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/fake_keypad"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primary_dark"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>