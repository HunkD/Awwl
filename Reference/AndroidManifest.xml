<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hunk.reference"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:name="com.hunk.reference.ReferenceApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hunk.reference.SubRootActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.hunk.reference.action.goto.root"/>
                <category android:name="android.intent.category.DEFAULT" />
                
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.hunk.nobank.feature.base.activity.WelcomePageActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.hunk.reference.action.goto.base.main"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.hunk.nobank.feature.base.activity.LoginPageActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.hunk.reference.action.goto.base.login"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.hunk.nobank.feature.base.activity.DashboardActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.hunk.reference.action.goto.base.dashboard"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Utility -->
        <activity 
            android:name="com.hunk.nobank.feature.base.activity.CameraCaptureActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.hunk.reference.action.goto.base.capture.picture"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
